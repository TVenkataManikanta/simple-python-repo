pipeline {
    agent any
    stages {
        stage ("Git Checkout") {
            steps {
                git branch: 'main', url: 'https://github.com/TVenkataManikanta/simple-python-repo.git'
            }
        }
        stage ("Python Execution") {
            steps {
                sh 'apt install python3 -y'
                sh 'python3 simple-python-jenkins-usecase.py'
            }
        }
    }
}